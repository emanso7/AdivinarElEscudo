<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.esei.dm.adivinarelescudo.HomeActivities.ActividadDetails"
    android:background="@color/background_azul_claro">

    <LinearLayout
        android:id="@+id/LayoutPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">

        <!-- Título -->
        <LinearLayout
            android:id="@+id/LayoutTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/border_rectangle"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perfil_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="@string/perfil_details"
                android:textColor="@color/azul_oscuro"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bloque de Nombre de Usuario -->
        <TextView
            android:id="@+id/userDetails_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:text="@string/username_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usuarioActivo_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/cuadradito_fondo"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/azul_oscuro"
            android:textSize="18sp" />

        <!-- Bloque de Correo Electrónico -->
        <TextView
            android:id="@+id/emailDetails_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:text="@string/correo_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/correoActivo_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/cuadradito_fondo"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/azul_oscuro"
            android:textSize="18sp" />

        <!-- Bloque de Puntos -->
        <TextView
            android:id="@+id/pointsDetails_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:text="@string/puntos"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/puntosActivo_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/cuadradito_fondo"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/azul_oscuro"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/LayoutVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_volverHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/azul_oscuro"
                android:text="@string/go_back"
                android:textColor="@color/white"
                android:textStyle="bold">

            </Button>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
