<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.esei.dm.adivinarelescudo.Actividad_home"
    android:background="@color/background_azul_claro">

    <LinearLayout
        android:id="@+id/LayoutHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/LayoutPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_weight="0.0125"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/usuario_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                     />

                <ImageButton
                    android:id="@+id/imagen_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="84dp"
                    android:backgroundTint="@color/background_azul_claro"
                    app:srcCompat="@mipmap/ic_account_circle" />
            </LinearLayout>

            <TextView
                android:id="@+id/tituloHome"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="@string/titulo_home"
                android:textColor="@color/azul_oscuro"
                android:textSize="60sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/button_jugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_jugar"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/azul_oscuro"
                android:layout_marginBottom="16dp" /> <!-- Márgen inferior -->/>

            <Button
                android:id="@+id/button_clasificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azul_oscuro"
                android:text="@string/button_clasificacion"
                android:layout_marginTop="16dp" /> <!-- Márgen superior -->/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>